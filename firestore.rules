rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users Collection
    match /users/{userId} {
      // Admins can read anyone's profile
      allow read: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      // Users can create their own profile, and read/update it.
      allow create, read, update: if request.auth != null && request.auth.uid == userId;
    }

    // Quizzes Collection
    match /quizzes/{quizId} {
      // Any authenticated user can read quizzes
      allow read: if request.auth != null;
      // Admins can create, update, and delete quizzes
      allow create, update, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Documents (Library) Collection
    match /documents/{documentId} {
        // Any authenticated user can read document metadata
        allow read: if request.auth != null;
        // Admins can create, update, delete documents
        allow create, update, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Quiz Attempts (nested in users)
    match /users/{userId}/attempts/{attemptId} {
        // Users can create their own attempts, and read them.
        allow create, read: if request.auth != null && request.auth.uid == userId;
        // Admins can read anyone's attempts for support/analytics
        allow read: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
