
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check for admin role
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Users can only read/update their own data.
    // Admins can read/update any user's data.
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId || isAdmin();
      allow create: if request.auth.uid != null;
    }

    // Quizzes can be read by any authenticated user.
    // Only admins can create, update, or delete quizzes.
    match /quizzes/{quizId} {
      allow read: if request.auth.uid != null;
      allow create, update, delete: if isAdmin();
    }
    
    // Documents can be read by any authenticated user.
    // Only admins can create, update, or delete documents.
    match /documents/{documentId} {
      allow read: if request.auth.uid != null;
      allow create, update, delete: if isAdmin();
    }

    // Attempts can only be created by any authenticated user.
    // Users can only read their own attempts.
    match /attempts/{attemptId} {
      allow create: if request.auth.uid != null;
      allow read: if request.auth.uid == resource.data.userId || isAdmin();
    }
  }
}
