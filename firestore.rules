rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Un utilisateur peut lire, mettre à jour et créer son propre document
      allow read, update, create: if request.auth != null && request.auth.uid == userId;
    }
     match /users/{document=**} {
      // Tout utilisateur authentifié peut lister les utilisateurs pour vérifier si le premier utilisateur est admin
      allow list: if request.auth != null;
    }
  }
}
